<h1>Register</h1>
{{#if error}}
    <p class="error">{{error}}</p>
{{/if}}

<form action="/register" method="POST">
    <label>Username
        <input type="text" name="username" required>
    </label>
    <label>Password
        <input type="password" name="password" required>
    </label>
    <button type="submit">Register</button>
</form>

<p><a href="/login">Back to login</a></p>